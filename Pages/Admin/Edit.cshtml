@page
@model CRJ_Shop.Pages.Admin.Edit

@{
}
<h1>EDIT</h1>

<div class="row">
    <div class="col-4">
        <form method="post">
            <input type="hidden" asp-for="Product.Id"/>
            <div class="form-control">
                <label asp-for="Product.Name">Name</label>
                <input type="text" asp-for="Product.Name" class="form-control"/>
            </div>
            <div class="form-control">
                <label asp-for="Product.Description">Description</label>
                <input type="text" asp-for="Product.Description" class="form-control"/>
            </div>
            <div class="form-control">
                <label asp-for="Product.Name">Price</label>
                <input type="text" asp-for="Product.Price" class="form-control"/>
            </div>
            <div class="form-control">
                <label asp-for="Product.Category">Category</label>
                <input type="text" asp-for="Product.Category" class="form-control"/>
            </div>

            <div class="form-group">
                <a class="form-group mt-2 btn btn-danger" asp-page="/admin/products">Back</a>
                <button type="submit" class="form-group mt-2 btn btn-success" >Update</button>
            </div>
        </form>

    </div>
</div>

