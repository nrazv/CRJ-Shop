@page
@model CRJ_Shop.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="my-4 text-center">
    <h1>Edit</h1>
    <h5 class="fst-italic">Edit your product by changing values</h5>
</div>

<div class="row mb-4 ">
    <div class="col-md-4 mx-auto">
        <form method="post" class="d-flex flex-column gap-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id"/>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control"/>
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control"/>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control"/>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Category" class="control-label"></label>
                <select class="form-select">
                    <option selected>Choose color</option>
                    <option>Red</option>
                    <option>Orange</option>
                </select>
                <span asp-validation-for="Product.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Category"></label>
                <input asp-for="Product.Category" type="file" class="form-control"/>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-success"/>
                <a class="btn btn-danger" asp-page="./Index">Cancel</a>
            </div>
            <div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
